@model IEnumerable<IENUMERABLE.Models.Student>

@{
    ViewData["Title"] = "Top Scorers";
}

<h2>Top Scorers (Marks ≥ 80)</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Marks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Marks</td>
            </tr>
        }
    </tbody>
</table>

